<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="n8da_rewards.sqlite" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:sqlite::resource:n8da_rewards.sqlite" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.driver" value="org.sqlite.JDBC" />
			<property name="javax.persistence.jdbc.password" value="root" />
			<property name="eclipselink.platform.class.name" value=""/>
			
			  <property name="eclipselink.ddl-generation" value="create-or-extend-tables" />
			  
      <property name="eclipselink.ddl-generation.output-mode"
        value="database" />
			
		</properties>
	</persistence-unit>
</persistence>